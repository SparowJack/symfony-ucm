<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
        <title>UCM</title>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/style_sidebar.css') }}"/>
        <style type="text/css">
            .current{
                 background-color: #286090;
                 color: #ffffff;
                 width: 25px;
                 height: 23px;
            }
            .pagination > span{
                width: 25px;
                 height: 23px;
                 border:1px solid #000;
            }
        </style>
      
    </head>
    <body>
        <div class="wrapper">
                <nav id="sidebar"  style="background: rgba(48, 46, 45, 1)">
                    <!-- Sidebar Header -->
                    <div class="sidebar-header" style="background: rgba(48, 46, 45, 1)">
                        <h3>Université Catholique de Madagascar</h3>
                        <strong><span class="tweak" style="color:#ff5252">UCM</span></strong>
                    </div>

                    <!-- Sidebar Links --> 
                    {% block sidebar %}
                    {% endblock %}                   
                    
                </nav>

                <div id="content" class="container"> 
                        <!-- session -->    
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn" style="background:rgba(48, 46, 45, 1)">
                                    <i class="glyphicon glyphicon-align-left"></i>               
                                </button> 
                                Connecté an tant que : {{ app.user.username}} | <a href="{{ path('fos_user_security_logout')}}" style="color:#337ab7">Déconnexion</a>
                            </div>
                        </nav>  
                        <!-- end session -->     
                        <nav class="navbar navbar-default">
                            <div class="container-fluid"> 
                                {% block recherche %}
                                {% endblock %}                      
                            </div>
                        </nav>
                        <div class="navbar">
                        {% block body %}{% endblock %}  
                        </div>             
                <div>
        </div>

        <!-- Scripts -->
        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
        {{ tinymce_init() }}
        <script type="text/javascript">    

     

            $(document).ready(function () {

                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });

            });
        </script>

        <!-- Menu Toggle Script -->
    </body>
</html>