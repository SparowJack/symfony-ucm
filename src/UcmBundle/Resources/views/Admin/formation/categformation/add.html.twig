{% block body %}
	{% for flash_message in app.session.flashBag.get('notice') %}
	<div class="p-3 mb-2 bg-success text-white">
	    {{ flash_message }}
	</div>
	{% endfor %}	
	
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}

    {{ form_errors(form) }}
    <h3 style="color:#062F4F;font-weight:bold"> Libelle</h3>
    <hr />
    <div class="form-group">
          {# Génération du label. #}
          {{ form_label(form.libelle, "Libelle", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.libelle) }}
          <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
          </div>
    </div>
    <div class="form-group">
          {# Génération du label. #}
          {{ form_label(form.type, "Type", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.type) }}
          <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
          </div>
    </div>
    <div class="form-group">
          {# Génération du label. #}
          {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.description) }}
          <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(form.description, {'attr': {'class': 'form-control','style':'width: 757px;height: 274px;'}}) }}
          </div>
    </div>

    <div class="form-group">
          {# Génération du label. #}
          {{ form_label(form.active, "Active", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.active) }}
          <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(form.active, {'attr': {'class': 'form-control','style':'width: 11px'}}) }}
          </div>
    </div>
    
		<button type="submit" class="{{ button_css|default('btn btn-primary') }}">
			<i class="fa fa-save" aria-hidden="true"></i> <span>Sauvegarder</span>
		</button>
	{{ form_end(form) }}
	 
{% endblock %}
